<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.luoyu.blog.project.mapper.applymapper.ArticleMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.luoyu.blog.project.pojo.apply.Article">
        <id column="ARTICLE_ID" property="articleId" />
        <result column="AUTHOR_ID" property="authorId" />
        <result column="TITLE" property="title" />
        <result column="CONTENT" property="content" />
        <result column="PRAISE_AMOUNT" property="praiseAmount" />
        <result column="COMMENT_AMOUNT" property="commentAmount" />
        <result column="STATUS" property="status" />
        <result column="READ_AMOUNT" property="readAmount" />
        <result column="CREATE_TIME" property="createTime" />
        <result column="UPDATE_TIME" property="updateTime" />
        <result column="UPDATER_ID" property="updaterId" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        ARTICLE_ID, AUTHOR_ID, TITLE, CONTENT, PRAISE_AMOUNT, COMMENT_AMOUNT, STATUS, READ_AMOUNT, CREATE_TIME, UPDATE_TIME, UPDATER_ID
    </sql>

    <select id="getArticleByTitle" parameterType="string" resultType="int">
        SELECT count(*)
        FROM ARTICLE
        WHERE TITLE = #{title}
    </select>

</mapper>
