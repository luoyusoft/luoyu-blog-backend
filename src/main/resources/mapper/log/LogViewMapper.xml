<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.luoyu.blog.mapper.log.LogViewMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.luoyu.blog.entity.log.LogView">
        <id column="id" property="id" />
        <result column="type" property="type" />
        <result column="method" property="method" />
        <result column="params" property="params" />
        <result column="time" property="time" />
        <result column="ip" property="ip" />
        <result column="create_time" property="createTime" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, type, method, params, time, ip, create_time, country, region, city
    </sql>

    <select id="selectMaxId" resultType="java.lang.Integer">
        select id
        from log_view
        order by id desc limit 1
    </select>

    <update id="updateLogViewById" parameterType="com.luoyu.blog.entity.log.LogView">
        update log_view
        <set>
            <if test="country != null and country != ''">
                country = #{country},
            </if>
            <if test="region != null and region != ''">
                region = #{region},
            </if>
            <if test="city != null and city != ''">
                city = #{city},
            </if>
            id = #{id}
        </set>
        where id = #{id}
    </update>

    <select id="selectLogViewsByPage" resultType="com.luoyu.blog.entity.log.LogView" parameterType="java.lang.Integer">
        select *
        from log_view
        where id &gt;= #{start} and id &lt; #{end} and city is not null
    </select>

</mapper>
